@model IEnumerable<HotelManagementSystem.Models.Menu>

@{
    ViewData["Title"] = "Menu Items";
}

<div>
    <table style="width: 100%;">
        <tr>
            <td><h1>Menu Items</h1></td>
            <td align="right"><a asp-action="Create" class="btn btn-success">Add New Item</a></td>
        </tr>
    </table>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MenuId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>