@model HotelManagementSystem.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="OrderId" />
    <div class="form-group">
        <label for="CustomerId" class="control-label">Customer</label>
        <select id="CustomerId" name="CustomerId" class="form-control" asp-items="ViewBag.Customers">
            <option value="">-- Select Customer --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="MenuItems" class="control-label">Menu Items</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in ViewBag.Menus)
                {
                    <tr>
                        <td>@menu.Text</td>
                        <td>
                            <input type="number" name="quantities" value="0" min="0" class="form-control" />
                            <input type="hidden" name="menuIds" value="@menu.Value" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>