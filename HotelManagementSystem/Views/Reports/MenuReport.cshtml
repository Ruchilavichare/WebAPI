@model IEnumerable<HotelManagementSystem.Models.Menu>

@{
    ViewData["Title"] = "Menu Report";
}

<h1>Menu Report</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => menu.ItemName)</td>
                <td>@Html.DisplayFor(modelItem => menu.Price)</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
</div>